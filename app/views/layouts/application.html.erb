<!DOCTYPE html>
<html>
  <head>
    <title>secret shows</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= form_tag search_artists_path, method: 'get' do %>
      <%= text_field_tag :query, nil, placeholder: "search for artists and concerts"  %>

    <% end %>

    <%= yield %>
    <p><%= link_to "Create a New Show", new_show_path %></p>
    <p><%= link_to "See All Shows", shows_path %></p>

  </body>
  <footer>
    <% if current_user.present? %>
    <p>current user:  <%= current_user.name %></p>
    <p><%= link_to "Logout", logout_path %></p>
    <% else %>
      <p><%= link_to "Login", login_path  %></p>
      <p><%= link_to('Log in with Facebook', '/auth/facebook') %></p>
      <p><%= link_to "Sign Up", new_user_path  %></p>
    <% end %>
  </footer>
</html>

<h1>Login</h1>

  <%= form_tag '/login'  do  %>
    <p><%= label_tag :name %></p>
    <p><%= text_field_tag :name %></p>
    <p><%= label_tag :email %></p>
    <p><%= text_field_tag :email %></p>
    <p><%= label_tag :password %></p>
    <p><%= text_field_tag :password %></p>
    <p><%= submit_tag %></p>
  <% end %>

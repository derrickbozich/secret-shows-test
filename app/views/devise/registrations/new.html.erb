
<%= content_tag :div, class: 'form-row' do %>
  <%= content_tag :div, class: 'form-group col-md-5' do %>
  <% end %>

  <%= content_tag :div, class: 'form-group col-md-3' do %>
    <h2 >Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-signin') do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name, class: "" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control mb-2' %>
      </div>

      <div class="field">
        <%= f.label :email, class: "" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-2' %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label-group" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mb-2' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "form-label-group mx-sm-7 mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-2' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: " btn btn-dark form-label-group mx-sm-7 mb-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  <% end %>
<% end %>

<div class="form-row">
  <div class="form-group col-md-4">
    <label for="show[artists_attributes][][name]">Artist name</label>
    <input class="form-control" type="text" name="show[artists_attributes][][name]" placeholder="Artist Name">
    <div id='{{idGenerator}}' class='feedback'></div>
  </div>

  <div class="form-group col-md-4">
    <label for="show[artists_attributes][][image]">Artist image link</label>
    <input class="form-control" type="text" name="show[artists_attributes][][image]" placeholder="square format please">
    <div id='{{idGenerator}}' class='feedback'></div>
  </div>

  <div class="form-group col-md-1">
    <label for="show[artists_attributes][][set_order]">Set order</label>
    <input type="text" name="show[artists_attributes][][set_order]" class="form-control" placeholder="set order optional">
  </div>

  <div class="form-group col-md-2">
    <label>Add another artist</label>
    <button name="button" type="button" class=" form-control btn btn-outline-dark add-artist" >Add Another Artist</button>
  </div>

  <div class="form-group col-md-1">
    <label>Delete</label>
    <button name="button" type="button" class=" form-control btn btn-outline-dark delete-artist">Delete</button>
  </div>
</div>
